
<h3>All reports for this date: <%= @date.to_date %></h3>

<% if !@records.empty? %>
<p>REPORTING TYPE | SPEND TIME | PROJECT NAME </p>
    <% @records.each do |rec| %>
<p> --- <%= rec.reporting_type %> | ---- <%= hours(rec.spend_time) %> ----  | -- <%= rec.project.name %> --</p>
    <% end %>
    <% else %>
<p>No reports found for this date</p>
<% end %>

<form	action="/new_record" method="post" id="rec">
  <input type="hidden" name="date" value="<%= @date %>" id="date" />
  <p>
    <input type="submit" value="Add report">
  </p>
</form>
<h3>Totals for each type of time</h3>

<p>Self deployment: <%= time_sum(@selfd) %> | Working: <%= time_sum(@work) %> | Team: <%= time_sum(@team) %>
  | Extra: <%= time_sum(@extra) %></p>

